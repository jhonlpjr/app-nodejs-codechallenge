{
  "name": "my-koa-app",
  "version": "1.0.0",
  "description": "A simple Koa application",
  "main": "src/app.ts",
  "scripts": {
    "start": "ts-node src/app.ts",
    "build": "tsc",
    "dev": "ts-node-dev src/app.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.5.0",
    "inversify": "^7.5.1",
    "kafkajs": "^2.2.4",
    "koa": "^2.16.1",
    "koa-bodyparser": "^4.4.1",
    "koa-router": "^10.0.0",
    "pino": "^9.6.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/inversify": "^2.0.32",
    "@types/jest": "^29.5.2",
    "@types/koa": "^2.15.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-router": "^7.4.8",
    "jest": "^29.5.0",
    "pino-pretty": "^13.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "author": "",
  "license": "ISC",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "rootDir": "./",
    "testMatch": ["**/test/**/*.spec.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.interface.ts",
      "!src/**/*.dto.ts",
      "!src/app.ts",
      "!src/utils/logger.ts",
      "!src/infraestructure/providers/*.ts"
    ],
    "coverageDirectory": "./coverage",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1"
    },
    "setupFilesAfterEnv": ["<rootDir>/test/setup.ts"],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.test.json"
      }
    }
  }
}
